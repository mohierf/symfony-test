{% extends 'layout.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}!</h1>

        <div class="alert alert-primary" role="alert">
            This is a primary alertâ€”check it out!
        </div>

        <a class="btn btn-primary" href="{{ path('command_new') }}">{{ 'Create new'|trans }}</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>{{ 'command_name'|trans }}</th>
                    <th>{{ 'command_line'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.getCommandName() }}</td>
                        <td>{{ item.getCommandLine() }}</td>

                        <td>
                            <a class="btn btn-light" href="{{ path('command_show', {'id': item.id}) }}"
                               title="{{ 'action.preview'|trans }}"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-primary" href="{{ path('command_edit', {'id': item.id}) }}"
                               title="{{ 'action.edit'|trans }}"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">{{ 'no records found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
