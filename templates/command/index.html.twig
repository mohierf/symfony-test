{% extends 'layout.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}!</h1>

        <a class="btn btn-primary" href="{{ path('command_new') }}">{{ 'Create new'|trans }}</a>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>{{ 'command_name'|trans }}</th>
                    <th>{{ 'command_line'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.getCommandName() }}</td>
                        <td>{{ item.getCommandLine() }}</td>

                        <td>
                            <a class="btn btn-light" href="{{ path('command_show', {'id': item.id}) }}" title="{{ 'action.preview'|trans }}"><i class="fa fa-eye"></i></a>
                            <a class="btn btn-primary" href="{{ path('command_edit', {'id': item.id}) }}" title="{{ 'action.edit'|trans }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">{{ 'no records found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
