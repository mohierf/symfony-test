{% extends 'layout.html.twig' %}

{% set pageTitle = 'command.show' %}
{% set pageSubTitle = 'command.subtitle' %}

{% block wrapper %}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ command.id }}</td>
        </tr>
        <tr>
            <th>{{ 'trans.field.command_name'|trans }}</th>
            <td>{{ command.getCommandName() }}</td>
        </tr>
        <tr>
            <th>{{ 'trans.field.command_line'|trans }}</th>
            <td>{{ command.getCommandLine() }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('command_index') }}">{{ 'action.back_to_list'|trans }}</a>

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('command/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
