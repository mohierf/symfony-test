{% extends 'layout.html.twig' %}

{% set pageTitle = 'json_schema.list' %}
{% set pageSubTitle = 'Gestion des sch√©mas Json' %}

{% block wrapper %}
    <div class="card card-default">
        <div class="card-body">
            {% if is_granted('FEATURE_TEMPLATE') and is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary" href="{{ path('json_schema_new') }}">{{ 'Create new'|trans }}</a>
            {% endif %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{ 'trans.field.name'|trans }}</th>
                        <th>{{ 'trans.field.content'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for json_schema in json_schemas %}
                        <tr>
                            <td>{{ json_schema.id }}</td>
                            <td>{{ json_schema.name }}</td>
                            <td>{{ json_schema.content }}</td>
                            <td>
                                <a class="btn btn-light" href="{{ path('json_schema_show', {'id': json_schema.id}) }}" title="{{ 'Preview'|trans }}"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-primary" href="{{ path('json_schema_edit', {'id': json_schema.id}) }}" title="{{ 'Edit'|trans }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">{{ 'no records found'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

