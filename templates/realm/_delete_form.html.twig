{% if is_granted('ROLE_ADMIN') %}
    <form method="post" action="{{ path('realm_delete', {'id': realm.id}) }}" onsubmit="">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ realm.id) }}">
        <input type="submit" class="btn" value="{{ 'action.delete'|trans }}"/>
    </form>
{% endif %}
