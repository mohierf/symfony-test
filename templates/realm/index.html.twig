{% extends 'layout.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}!</h1>

        <a class="btn btn-primary" href="{{ path('realm_new') }}">{{ 'Create new'|trans }}</a>
        <div class="panel">
            {{ json_content }}
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>{{ 'realm_name'|trans }}</th>
                    <th>{{ 'alias'|trans }}</th>
                    <th>{{ 'parent'|trans }}</th>
                    <th>{{ 'children'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.getRealmName() }}</td>
                        <td>{{ item.getAlias() }}</td>
                        <td>{{ item.getParent() }}</td>
                        <td>
                            {% for child in item.getRealms() %}
                                {{ child.getRealmName() }}
                            {% else %}
                                {{ '-/-'|trans }}
                            {% endfor %}
                        </td>

                        <td>
                            <a class="btn btn-light" href="{{ path('realm_show', {'id': item.id}) }}" title="{{ 'action.preview'|trans }}"><i class="fa fa-eye"></i></a>
                            <a class="btn btn-primary" href="{{ path('realm_edit', {'id': item.id}) }}" title="{{ 'action.edit'|trans }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">{{ 'no records found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
